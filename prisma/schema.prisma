datasource db {}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int     @id @default(autoincrement())
    name     String?
    email    String  @unique
    password String
    todos    Todo[]
}

model Todo {
    id        Int      @id @default(autoincrement())
    title     String
    done      Boolean  @default(false)   createdAt DateTime @default(now())
    userId    Int

    user User @relation(fields: [userId], references: [id])
}

